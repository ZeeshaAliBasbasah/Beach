<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  

    

                 
                         
                                                             
           

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:contentPadding="10dp" android:tag="layout/flight_item_recycler_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tool="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <View
                android:id="@+id/myRectangleView"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@drawable/rectangle"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_1"                            
                android:textColor="#FFFF"
                app:layout_constraintBottom_toBottomOf="@+id/myRectangleView"
                app:layout_constraintLeft_toLeftOf="@+id/myRectangleView"
                app:layout_constraintRight_toRightOf="@+id/myRectangleView"
                app:layout_constraintTop_toTopOf="@+id/myRectangleView"
                tool:text="1300" />

            <TextView
                android:id="@+id/flightName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:tag="binding_2"         
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                tool:text="Flight Name" />

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="From"
                android:textColor="#323232"
                app:layout_constraintBottom_toTopOf="@+id/departureAirPort"
                app:layout_constraintLeft_toLeftOf="@+id/departureAirPort" />

            <TextView
                android:id="@+id/departureAirPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif"
                android:tag="binding_3"                   
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flightName"
                tool:text="Departure Air" />

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="To"
                app:layout_constraintBottom_toTopOf="@+id/arrivalAirPort"
                app:layout_constraintLeft_toLeftOf="@+id/arrivalAirPort"
                app:layout_constraintStart_toStartOf="@+id/arrivalAirPort" />

            <TextView
                android:id="@+id/arrivalAirPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:tag="binding_4"                 
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/flightName"
                tool:text="Arrival Air" />


            <TextView
                android:id="@+id/departure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Departure"
                app:layout_constraintBottom_toTopOf="@+id/departuredate"
                app:layout_constraintLeft_toLeftOf="@+id/departuredate" />

            <TextView
                android:id="@+id/departuredate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:tag="binding_5"                                    
                app:layout_constraintLeft_toLeftOf="@+id/departureAirPort"
                app:layout_constraintTop_toBottomOf="@+id/departureAirPort"
                tool:text="1/2/2019" />

            <TextView
                android:id="@+id/arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Arrival"
                app:layout_constraintBottom_toTopOf="@+id/arrivalDate"
                app:layout_constraintLeft_toLeftOf="@+id/arrivalDate" />

            <TextView
                android:id="@+id/arrivalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:tag="binding_6"                                  
                app:layout_constraintLeft_toLeftOf="@+id/arrivalAirPort"
                app:layout_constraintTop_toBottomOf="@+id/arrivalAirPort"
                tool:text="2/3/2019" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:text="Select"
                android:textColor="#FE5F55"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/arrivalDate" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

         